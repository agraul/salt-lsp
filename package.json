{
  "name": "salt-lsp",
  "description": "Salt Language Server Protocol Server",
  "contributors": [
    {
      "name": "Cédric Bosdonnat"
    },
    {
      "name": "Dan Čermák"
    }
  ],
  "publisher": "dancermak",
  "repository": "https://github.com/dcermak/salt-lsp",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onLanguage:sls"],
  "contributes": {
    "languages": [
      {
        "id": "sls",
        "aliases": ["SaltStack", "salt", "pillar"],
        "extensions": [".sls"]
      },
      {
        "id": "tst",
        "aliases": ["SaltStack", "salt", "saltcheck"],
        "extensions": [".tst"]
      },
      {
        "id": "jinja",
        "aliases": ["j2", "jinja2"],
        "extensions": [".jinja", ".j2"]
      }
    ]
  },
  "main": "./clients/vscode/out/extension",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vscode": "yarn run vscode:prepublish && VSCODE=$(which code-insiders || which code || echo echo ERROR: neither the code nor code-insiders vscode executable is installed); USER=dummy-dont-share-vscode-instance $VSCODE --user-data-dir=$PWD/.vscode-dev/user-data --extensionHomePath=$PWD/.vscode-dev/extensions --extensionDevelopmentPath=$PWD $*"
  },
  "devDependencies": {
    "@types/node": "^14",
    "typescript": "^4",
    "vscode": "^1.1.36"
  },
  "dependencies": {
    "vscode-languageclient": "^7"
  }
}
